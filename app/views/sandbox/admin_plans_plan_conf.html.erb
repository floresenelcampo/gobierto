<div class="admin_breadcrumb">
  <%= link_to 'Inicio', 'admin' %> »
  <%= link_to 'Planificación', '' %> »
  <%= link_to 'PLAN', '' %> »
  Configuración
</div>

<h1>Configuración</h1>

<div class="tabs">
  <ul>
    <li><%= link_to 'Plan', 'admin_plans_plan' %></li>
    <li><%= link_to 'Proyectos', 'admin_plans_plan_proyects' %></li>
    <li class="active"><%= link_to 'Configuración', '' %></li>
  </ul>
</div>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-16-24">

    <form>

      <div class="form_item select_control">
        <label for="entity">Tipo</label>
        <!-- should show the list from sandbox/admin_people_conf -->
        <select>
          <option>Plan Actuación Municipal</option>
          <option>Plan Urbanístico</option>
          <option>Plan Interno</option>
        </select>
      </div>

      <div class="globalized_fields">

        <%= render partial: "admin_globalized_fields"  %>

        <div class="form_item input_text">
          <label for="a1">Título</label>
          <input type="text" id="a1" value="Título del plan">
        </div>

        <div class="form_item textarea">
          <label for="entity">Introducción</label>
          <textarea>Más info... </textarea>
          <div class="inline_help"></div>
        </div>

        <p>PIE DE PAGINA</p>

      </div>

      <p>AÑO</p>

      <p>URL</p>

      <p>VOCAB</p>

      <p>CSS</p>


      
      <h2>Opciones</h2>

      <div class="globalized_fields">

        <%= render partial: "admin_globalized_fields"  %>

        <div class="form_item input_text">
          <label for="email">Nivel 1</label>
          <input type="text" id="" value="Eje">
        </div>

        <div class="form_item input_text">
          <label for="email">Nivel 2</label>
          <input type="text" id="" value="Línea de actuación">
        </div>

        <div class="form_item input_text">
          <label for="email">Nivel 3</label>
          <input type="text" id="" value="Actuación">
        </div>

        <div class="form_item input_text">
          <label for="email">Nivel 4</label>
          <input type="text" id="" value="Proyecto">
        </div>

      </div>

      <h2>Opciones para Nivel 1</h2>

      <div class="form_item input_text">
        <label for="email">Nivel 1</label>
        <input type="text" id="" value="Eje">
      </div>

      <h2>Campos personalizados en proyectos</h2>

      <div class="globalized_fields">

        <%= render partial: "admin_globalized_fields"  %>

        <div class="form_item input_text">
          <label for="email">Nivel 1</label>
          <input type="text" id="" value="Eje">
        </div>

        <div class="form_item input_text">
          <label for="email">Nivel 2</label>
          <input type="text" id="" value="Línea de actuación">
        </div>

        <div class="form_item input_text">
          <label for="email">Nivel 3</label>
          <input type="text" id="" value="Actuación">
        </div>

        <div class="form_item input_text">
          <label for="email">Nivel 4</label>
          <input type="text" id="" value="Proyecto">
        </div>

      </div>

      <%= render partial: "admin_add_new"  %>

    </form>


  </div>

  <div class="pure-u-1 pure-u-md-2-24"></div>

  <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

    <%= render "admin_widget_save.html.erb", locals: { only_save_button: true } %>
    <%# render "admin_widget_attachment.html.erb" %>

  </div>

</div>

<% content_for :javascript_hook do %>
  <%= javascript_tag do %>
    window.GobiertoAdmin.gobierto_attachments_controller.index();
  <% end %>
<% end %>
