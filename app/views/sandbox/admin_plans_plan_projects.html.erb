<h1>Proyectos de Plan Actuación Municipal</h1>

<div class="tabs">
  <ul>
    <li><%= link_to 'Plan', 'admin_plans_plan' %></li>
    <li class="active"><%= link_to 'Proyectos', 'admin_plans_plan_projects' %></li>
    <li><%= link_to 'Configuración', '' %></li>
  </ul>
</div>

<div class="i_filters">

  <div class="i_filter">
    <label>Permisos</label>
    <div class="i_f_options_text">
      <div class="i_f_option i_f_option_active"><span>Tus proyectos</span> (3)</div>
      <div class="i_f_option"><a href=""><span>Puedes editar</span> (13)</a></div>
      <div class="i_f_option"><a href=""><span>Todos</span> (123)</a></div>
    </div>
  </div>

  <div class="i_filter">
    <label>Moderación</label>
    <div class="i_f_options_text">
      <div class="i_f_option"><a href=""><span>Todos</span> (3)</a></div>
      <div class="i_f_option i_f_option_active"><span>En borrador</span> (13)</div>
      <div class="i_f_option"><a href=""><span>Enviados</span> (123)</a></div>
      <div class="i_f_option"><a href=""><span>En revisión</span> (123)</a></div>
      <div class="i_f_option"><a href=""><span>Aprobados</span> (123)</a></div>
      <div class="i_f_option"><a href=""><span>Descartados</span> (123)</a></div>
    </div>
  </div>

  <div class="i_filter ">
    <label>Filtrar</label>
    <div class="i_f_options_forms f_flex_col f_flex_col_7">

      <div class="form_item input_text compact">
        <input type="text" placeholder="Busca...">
      </div>

      <%= render partial: "admin_form_select", locals: {
        select_compact: true,
        label: 'Categoría',
        options: [
          # All vocab tree - We should offer a select2 like dropdown
          'Eje 1 - Economia, emprenedoria i ocupació',
          'Eje 2 - Buen Gobierno',
          'Eje 3 - Sostenibilidad',
          'Eje 4 - Felicidad',
          'Eje 5 - Eficiencia'
        ] }
      %>

      <%= render partial: "admin_form_select", locals: {
        select_compact: true,
        label: 'Progreso',
        options: [
          '0-25%',
          '26-50%',
          '51-75%',
          '76-100%'
        ] }
      %>

      <%= render partial: "admin_form_select", locals: {
        select_compact: true,
        label: 'Estado',
        options: [
          'Pendiente de iniciar',
          'Iniciado',
          'En progreso',
          'Completado'
        ] }
      %>

      <%= render partial: "admin_form_select", locals: {
        select_compact: true,
        label: 'Autor',
        options: [
          'Belén Temprano',
          'Fernando Blat',
          'Eduardo Martinez',
          'Hugo Hugo',
          'Alberto Amiedes'
        ] }
      %>

      <div class="form_item input_text compact">
        <!-- <input data-language="es" data-timepicker="true" data-autoclose="false" data-date-format="yyyy-mm-dd" data-time-format="hh:ii" data-startdate="1552669200000" data-bind="true" class="air-datepicker" type="text" value="2019-03-15 18:00:00 +0100" name="event[starts_at]" id="event_starts_at"> -->
        <input type="text"
          data-range="true"
          data-multiple-dates-separator="-"
          data-language="en"
          class="datepicker-here" />
      </div>

      <button class="button small rounded">Filtrar</button>

    </div>
  </div>

</div>

<table>
<tr>
  <th class="icon"></th>
  <th>Proyecto</th>
  <th>Progreso</th>
  <th>Estado</th>
  <th>Actualizado</th>
  <th></th>
  <th class="icon"></th>
</tr>
<% for i in [
  'Implantación Administración Electrónica en Municipios',
  'Implantación de Herramientas Transparencia',
