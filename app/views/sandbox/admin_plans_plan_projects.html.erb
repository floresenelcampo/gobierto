]
%>
<tr>
  <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, 'admin_plans_plan_projects_project' %></td>
  <td><%= link_to i, 'admin_plans_plan_projects_project' %></td>
  <td>45%</td>
  <td>Moderado</td>
  <td>hace 2 minutos</td>
  <td><%= link_to '<i class="fas fa-eye"></i> Ver item'.html_safe, '#FRONT_PLAN_PROJECT', class: 'view_item' %></td>
  <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, '#FRONT_PLAN_PROJECT', title: 'Eliminar proyecto', class: 'tipsit p_h_1' %></td>
</tr>
<tr>
  <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, 'admin_plans_plan_projects_project' %></td>
  <td><%= link_to i, 'admin_plans_plan_projects_project' %></td>
  <td>0</td>
  <td>En revisión</td>
  <td>12 abr 19</td>
  <td><%= link_to '<i class="fas fa-eye"></i> Ver item'.html_safe, '#FRONT_PLAN_PROJECT', class: 'view_item' %></td>
  <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, '#FRONT_PLAN_PROJECT', title: 'Eliminar proyecto', class: 'tipsit p_h_1' %></td>
</tr>
<tr>
  <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, 'admin_plans_plan_projects_project' %></td>
  <td><%= link_to i, 'admin_plans_plan_projects_project' %></td>
  <td>100%</td>
  <td>Publicado</td>
  <td>1 ene 18</td>
  <td><%= link_to '<i class="fas fa-eye"></i> Ver item'.html_safe, '#FRONT_PLAN_PROJECT', class: 'view_item' %></td>
  <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, '#FRONT_PLAN_PROJECT', title: 'Eliminar proyecto', class: 'tipsit p_h_1' %></td>
</tr>
<% end %>
</table>
