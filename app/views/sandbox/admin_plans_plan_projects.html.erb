<div class="admin_breadcrumb">
  <%= link_to 'Inicio', 'admin' %> »
  <%= link_to 'Planificación', 'admin_plans' %> »
  <%= link_to 'Plan Actuación Municipal', 'admin_plans_plan' %> »

