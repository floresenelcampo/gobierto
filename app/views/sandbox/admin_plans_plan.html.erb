<div class="admin_breadcrumb">
  <%= link_to 'Inicio', 'admin' %> »
  <%= link_to 'Planificación', '' %> »
  Plan Actuación Municipal
</div>

<h1>Plan Actuación Municipal</h1>

<div class="tabs">
  <ul>
    <li class="active"><%= link_to 'Plan', 'admin_plans_plan' %></li>
    <li><%= link_to 'Proyectos', 'admin_plans_plan_projects' %></li>
    <li><%= link_to 'Configuración', '' %></li>
  </ul>
</div>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-17-24">

    <div class="pure-g">

      <div class="pure-u-1 pure-u-md-1-3 p_h_r_2 ">
        <div class="p_1 border-el">
          <h5>Progreso global</h5>

          <div class="m_t_1 metric metric_medium with_progress_bar">
            <div class="metric_value">34%</div>
            <div class="metric_progress_bar">
              <div class="metric_progress_bar_progress" style="width: 34%"></div>
            </div>
          </div>

        </div>
      </div>

      <div class="pure-u-1 pure-u-md-2-3">
        <div class="p_1 border-el">
          <h5>Proyectos</h5>

          <div class="m_t_1 f_flex_col">

            <div class="metric metric_medium ">
              <div class="metric_value color_sem_red">
                <a href="admin_plans_plan_projects">21</a>
              </div>
              <div class="metric_label">Enviados</div>
            </div>

            <div class="metric metric_medium ">
              <div class="metric_value color_sem_yellow">
                <a href="admin_plans_plan_projects">21</a>
              </div>
              <div class="metric_label">En revisión</div>
            </div>

            <div class="metric metric_medium ">
              <div class="metric_value color_sem_green">
                <a href="admin_plans_plan_projects">21</a>
              </div>
              <div class="metric_label">Aprobados</div>
            </div>

            <div class="metric metric_medium ">
              <div class="metric_value">
                <a href="admin_plans_plan_projects">123</a>
              </div>
              <div class="metric_label"><strong>Total</strong></div>
            </div>

          </div>

        </div>
      </div>

    </div>

    <div class="m_v_2">
      <%= render partial: "admin_vocab"  %>
    </div>

  </div>

  <div class="pure-u-1 pure-u-md-1-24"></div>

  <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

    <%= render "admin_widget_save.html.erb", locals: { only_save_button: true } %>
    <%# render "admin_widget_attachment.html.erb" %>

  </div>

</div>
