<div class="admin_breadcrumb">
  <%= link_to 'Inicio', 'admin' %> »
  Vocabularios
</div>

<h1>Vocabularios</h1>

<div class="admin_tools right">
  <%= link_to 'Nuevo', '#modal_edit_theme', class: 'button open_modal' %>
</div>

<table>
<tr>
  <th class="icon_col"></th>
  <th>Tema</th>
  <th>Términos</th>
  <th class="icon_col"></th>
</tr>

<% for i in [
  'Plan de Actuación Municipal 2016-2019',
  'Plan Urbanístico 2020',
  'Plan Smart City',
  'Interno: Planificación'
] %>
<tr>
  <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, '#modal_edit_theme', class: 'open_modal' %></td>
  <td><%= link_to i, '#modal_edit_theme', class: 'open_modal' %></td>
  <td><%= link_to '<i class="fas fa-cog"></i> Ver términos'.html_safe, 'admin_sites_vocab_edit', class: 'view_item' %></td>
  <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, '' %></td>
</tr>
<% end %>

</table>


<div class="modal mfp-hide" id="modal_edit_theme">

  <h2>Editar tema</h2>

  <form>

    <div class="globalized_fields">

      <div class="globalize_tool">
        <label>Traducir</label>
        <a href="#" class="locale_option selected completed tipsit" title="Define el contenido en su versión en Español">
          <span class="locale">ES</span>
          <span class="status"></span>
        </a>
        <a href="#" class="locale_option completed tipsit" title="Define el contenido en su versión en Catalán">
          <span class="locale">CA</span>
          <span class="status"></span>
        </a>
        <a href="#" class="locale_option tipsit" title="Define el contenido en su versión en Inglés">
          <span class="locale">EN</span>
          <span class="status"></span>
        </a>
      </div>

      <div class="form_item input_text">
        <label for="name">Nombre</label>
        <input type="text" id="name" value="Deporte">
      </div>

    </div>

    <div class="actions right">
      <button class="light">Cancelar</button>
      <input type="submit" value="Guardar">
    </div>

  </form>

</div>
