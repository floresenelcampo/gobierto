<h1>Permisos del grupo: PAM - Admins</h1>

<div class="pure-g">

  <div class="pure-u-1 pure-u-md-16-24">

    <p>Hay 32 usuarios con este grupo.</p>

    <div class="form_item input_text">
      <label for="name">Nombre del grupo</label>
      <input type="text" id="name" value="PAM - Admins">
    </div>

    <h3>Sitio</h3>

    <div class="form_item">

      <% options = [
        'Personalizar sitio',
        'Vocabularios',
        'Plantillas',
        'Campos personalizados'
      ] %>

      <% for i in options %>

      <div class="options compact">

        <div class="option">
          <input type="hidden" name="permission_1" value="0"/>
          <input type="checkbox" id="permission_1" name="permission_1" value="1"/>
          <label for="permission_1">
            <span></span>
            <%= i %>
          </label>
        </div>

      </div>

      <% end %>

    </div>

    <h3>Módulos</h3>

    <div class="form_item">

      <% options = [
        'Gobierto Budgets',
        'Gobierto People',
        'Gobierto Observatory'
      ] %>

      <% for i in options %>

      <div class="options compact">

        <div class="option">
          <input type="hidden" name="permission_1" value="0"/>
          <input type="checkbox" id="permission_1" name="permission_1" value="1"/>
          <label for="permission_1">
            <span></span>
            <%= i %>
          </label>
        </div>

      </div>

      <% end %>

    </div>

  </div>

  <div class="pure-u-1 pure-u-md-2-24"></div>

  <div class="pure-u-1 pure-u-md-1-4 stick_in_parent" id="stick_in_parent">

    <%= render partial: "admin_widget_save", locals: { only_save_button: true }  %>

  </div>

</div>
