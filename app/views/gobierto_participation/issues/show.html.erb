<% content_for(:current_submodule_link) do %>
  <%= link_to @issue.name, gobierto_participation_issue_path(@issue.slug) %>
<% end %>

<% content_for :subscribable_button do %>
  <%= render 'user/subscriptions/subscribable_button', subscribable: @issue %>
<% end %>

<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1">
        <%= link_to gobierto_participation_issue_path(@issue.slug),
                    style: "background-image: url(#{image_url('illustrations/mobile.svg')})",
                    class: "p_1 content_block cover_bottom_left align_bottom_right" do %>
          <div>
            <h2><%= @issue.name %></h2>
            <p><%= @issue.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "gobierto_participation/shared/latest_info", locals: { events: @issue_events, activities: @issue_notifications, news: @issue_news } %>

<%= render partial: "gobierto_participation/shared/proccesses", locals: { processes: @processes } %>

<%= render partial: "gobierto_participation/shared/groups", locals: { groups: @groups } %>
