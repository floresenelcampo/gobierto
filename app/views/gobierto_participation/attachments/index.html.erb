<% content_for(:current_submodule_link) do %>
  <%= link_to t('gobierto_admin.gobierto_participation.shared.navigation.documents'), gobierto_participation_attachments_path %>
<% end %>

<div class='gradient-bg'>
  <div class='column'>
    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <div class='content_side'>
          <h2 class='with_separator'>
            <%= t('gobierto_participation.shared.documents_for', container: t('gobierto_participation.shared.participation')) %>
          </h2>

          <%= render 'gobierto_participation/shared/attachments/attachments_filter', { issues: @issues } %>

          <% if params["issue_id"] %>
            <div>
              <small><%= link_to t('gobierto_participation.shared.all_attachments'), gobierto_participation_attachments_path %></small>
            </div>
          <% end %>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <% if @attachments && @attachments.any? %>
          <% @attachments.each do |attachment| %>
            <%= render 'gobierto_participation/shared/attachments/attachment_teaser', { attachment: attachment } %>
          <% end %>
        <% else %>
          <p><%= t('gobierto_participation.shared.no_documents') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
