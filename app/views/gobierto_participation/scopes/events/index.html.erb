<div class="gradient-bg">
  <div class="column">

    <div class="pure-g">
      <div class="pure-u-1 pure-u-lg-1-3">
        <div class="content_side">
          <h2 class='with_separator'>
            <%= t('gobierto_participation.shared.diary_for', container: @scope.name) %>
          </h2>
          <div>
            <small><%= link_to t('gobierto_participation.shared.all_events'), gobierto_participation_scope_events_path %></small>
          </div>

          <%= render 'gobierto_participation/shared/events/calendar_component', events: @events %>

          <% unless @scope %>
            <h4 class="with_light_separator m_t_1"><%= t('gobierto_participation.shared.filter_by_theme') %></h4>

            <ul class="link_list">
              <% @scopes.each do |scope| %>
                <li>
                  <%= link_to scope.name , gobierto_participation_scope_events_path(scope_id: scope.slug) %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>


      <div class="pure-u-1 pure-u-lg-2-3">
        <% if @events.any? %>
          <div class="events_list">
            <% @events.each do |event| %>
              <%= render 'gobierto_participation/shared/events/event_teaser', event: event %>
            <% end %>
          </div>
        <% else %>
          <%= t('gobierto_participation.shared.no_events') %>
        <% end %>

        <%= paginate @events, window: 3, outer_window: 2 %>

      </div>
    </div>
  </div>
</div>
