<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3 groups">
        <h2 class="with_separator"><%= t(".work_groups_title") %></h2>
        <p class="soft"><%= t(".work_groups_description") %></p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 groups">
        <div class="pure-g three_by_three" id="groups">
          <% if @groups.any? %>
            <% @groups.each do |group| %>
              <%= render "gobierto_participation/processes/group_teaser", { group: group } %>
            <% end %>
          <% else %>
            <div class="pure-u-1 pure-u-md-1-3">
              <p><%= t(".no_groups") %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
