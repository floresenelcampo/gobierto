<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator"><%= t(".processes_title") %></h2>
        <p class="soft"><%= t(".processes_description") %></p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 current_processes">
        <div class="pure-g two_by_two" id="processes">
          <% if @processes.any? %>
            <% @processes.each do |process| %>
              <%= render "gobierto_participation/processes/process_teaser", { process: process } %>
            <% end %>
          <% else %>
            <div class="pure-u-1 pure-u-md-1-3">
              <p><%= t(".no_processes") %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
