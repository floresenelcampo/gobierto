<div class="gradient-bg">
  <div class="column">

    <div class="pure-g">

      <div class="pure-u-1 pure-u-md-1-3">
        <h1 class="with_separator"><%= t(".polls") %></h1>
      </div>

      <div class="pure-u-1 pure-u-md-2-3">
        <% if @polls.any? %>
          <% @polls.each do |poll| %>
            <%= render "theme_teaser_question", poll: poll %>
          <% end %>
        <% else %>
          <p><%= t(".no_polls") %></p>
        <% end %>
      </div>

    </div>

  </div>
</div>
