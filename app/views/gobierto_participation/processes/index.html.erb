<% content_for(:current_submodule_link) do %>
  <%= link_to t('gobierto_participation.layouts.menu_subsections.processes'), gobierto_participation_processes_path %>
<% end %>

<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <h2 class="with_separator"><%= t('.ongoing_processes') %></h2>
        <p class="soft"><%= t('.ongoing_processes_p') %></p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 groups">
        <div class="pure-g two_by_two">
          <% @processes.each do |process| %>
            <%= render 'process_teaser', process: process %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="gradient-bg">
  <div class="column">
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3 groups">
        <h2 class="with_separator"><%= t('.groups') %></h2>
        <p class="soft"><%= t('.groups_p') %></p>
      </div>

      <div class="pure-u-1 pure-u-md-2-3 groups">
        <div class="pure-g three_by_three">
          <% @groups.each do |group| %>
            <%= render 'group_teaser', group: group %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
