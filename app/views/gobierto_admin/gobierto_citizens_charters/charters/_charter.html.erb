<tr id="charter-item-<%= charter.id %>" data-id="<%= charter.id %>">
  <td>
    <%= link_to edit_admin_citizens_charters_charter_path(charter) do %>
      <i class="fas fa-edit"></i>
    <% end %>
  </td>
  <td>
    <%= link_to admin_citizens_charters_charter_editions_intervals_path(charter) do %>
      <%= charter.title %>
    <% end %>
  </td>
  <td>
    <%= charter.service %>
  </td>
  <td>
    <%= l(charter.created_at, format: :short) %>
  </td>
  <td>
    <%= l(charter.updated_at, format: :short) %>
  </td>
  <td class="visibility_level">
    <% if charter.draft? %>
      <i class="fas fa-lock"></i>
    <% else %>
      <i class="fas fa-check"></i>
    <% end %>
    <%= t("gobierto_admin.shared.save_widget.visibility_level.#{charter.visibility_level}") %>
  </td>
  <td>
    <%= link_to preview_url(charter, host: current_site.domain), target: "_blank", class: "view_item" do %>
      <i class="fas fa-eye"></i>
      <%= t(".view_charter") %>
    <% end %>
  </td>
  <td>
    <% if charter.archived? %>
      <% if charter.belongs_to_archived? %>
        <%= content_tag :div, title: t("gobierto_admin.shared.recover.not_recoverable") do %>
          <i class="fas fa-ban"></i>
        <% end %>
      <% else %>
        <%= link_to t("gobierto_admin.shared.recover.element"),
                      admin_citizens_charters_charter_recover_path(charter),
                      title: t("gobierto_admin.shared.recover.element"),
                      method: :put,
                      data: { confirm: t("gobierto_admin.shared.recover.confirm") } %>
      <% end %>
    <% else %>
      <%= link_to admin_citizens_charters_charter_path(charter),
                  title: t("gobierto_admin.shared.archive.element"),
                  method: :delete,
                  data: { confirm: t("gobierto_admin.shared.archive.confirm") } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
    <% end %>
  </td>
</tr>
